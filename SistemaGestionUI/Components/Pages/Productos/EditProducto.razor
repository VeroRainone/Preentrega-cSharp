@page "/productos/{id:int}/editar"
@inject ProductosBusiness Business

<h3>Edit Producto</h3>

@if(Producto?.Id == null)
{
    <p>No existe el producto</p>
}
else
{
    <ProductosForm Producto="Producto" />
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Producto? Producto;

    protected override void OnInitialized()
    {
        Producto = Business.GetOneProducto(Id);
    }
}
