@page "/productos"
@inject ProductosBusiness Business

<h3>Productos</h3>
<div class=" container">
    <div class="row">
        <div class="col-6">
            <a href="/productos/new">
                <button type="button" class="btn btn-success">Crear</button>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Costo</th>
                    <th>PrecioVenta</th>
                    <th>Stock</th>
                    <th>IdUsuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Producto producto in productos)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Descripcion</td>
                        <td>@producto.Costo</td>
                        <td>@producto.PrecioVenta</td>
                        <td>@producto.Stock</td>
                        <td>@producto.IdUsuario</td>
                        <td>
                            <a href="/productos/@producto.Id/Editar">Editar </a>
                        </td>
                        <td>
                            <button @onclick="@(() => EliminarProducto(producto.Id))" class="btn btn-danger">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<Producto> productos = [];
        
    protected override void OnInitialized()
    {
        productos = Business.GetProductos();
    }
    private void EliminarProducto(int id)
    {
        Business.DeleteProducto(id);
       
        productos = Business.GetProductos();
    }
}
