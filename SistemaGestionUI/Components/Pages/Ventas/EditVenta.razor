@page "/ventas/{id:int}/editar"
@inject NavigationManager NavigationManager

@inject VentasBusiness Business

<h3>Edit Venta</h3>

@if(Venta?.Id == null)
{
    <p>No existe el Venta</p>
}
else
{
    <VentasForm Venta="Venta" />
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Venta? Venta;

    protected override void OnInitialized()
    {
        Venta = Business.GetOneVenta(Id);
    }
}
